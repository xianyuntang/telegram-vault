{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "sourceMap": false,
    "outDir": "../../dist",
    "baseUrl": "../../src",
    "paths": {
      "@/main/*": ["main/*"],
      "@/common/*": ["common/*"]
    },
    "esModuleInterop": true
  },
  "include": ["../main/**/*.ts", "../common/**/*.ts"],
  "exclude": ["../renderer/**/*"]
}
